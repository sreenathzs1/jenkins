pipeline {
    agent {
        node {
            label 'NODEJS'
        }
    }

    environment {
        PROJECT_NAME = "ROBOSHOP"
    }
    
    stages {

        stage('ONE') {
            steps{
                sh "echo ${PROJECT_NAME}"
            }
        }
        stage('TWO') {

            environment {
                PROJECT_NAME = "TODO"
            }
            steps {
                sh "echo ${PROJECT_NAME}"
            }
        }
    }

}